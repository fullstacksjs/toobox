{
  "extends": "@fullstacksjs/tsconfig/esm",
  "compilerOptions": {
    "outDir": "lib/esm",
    "declarationDir": "lib/types",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "node",
    "allowJs": true
  },
  "include": ["src/"],
  "exclude": ["**/*.spec.ts"]
}
