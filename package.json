{
  "name": "@fullstacksjs/toolbox",
  "version": "2.10.0",
  "license": "MIT",
  "author": "ASafaeirad <frontendmonster@gmail.com>",
  "description": "a zero-dependency collection of missing JavaScript utilities",
  "repository": {
    "type": "git",
    "url": "git@github.com:fullstacksjs/toolbox.git"
  },
  "files": [
    ".husky/prepare",
    ".npmignore",
    ".npmrc",
    "lib/",
    "LICENSE",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js",
      "types": "./lib/index.d.ts"
    }
  },
  "sideEffects": false,
  "scripts": {
    "commit": "git-cz",
    "prebuild": "shx rm -rf lib/*",
    "build": "tsup --dts-only && tsup --tsconfig tsconfig.build.json && ./postbuild",
    "type-check": "tsc --emitDeclarationOnly false --noEmit",
    "lint": "npm run lint:ci -- --fix",
    "lint:ci": "eslint . --ext .js,.ts,.tsx",
    "test": "vitest --run",
    "test:ci": "CI=true vitest --allowOnly",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "prerelease": "npm run verify",
    "release": "standard-version && npm publish && git push --follow-tags --no-verify",
    "verify": "npm run lint && npm run test",
    "prepublishOnly": "pinst --disable && pkg-ok ./lib/esm && pkg-ok ./lib/cjs",
    "postpublish": "pinst --enable",
    "prepare": ".husky/prepare",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.6",
    "@commitlint/config-conventional": "17.6.6",
    "@frontendmonster/builder": "2.2.0",
    "@fullstacksjs/eslint-config": "9.7.0",
    "@fullstacksjs/tsconfig": "1.1.0",
    "@semantic-release/github": "9.0.3",
    "@semantic-release/npm": "10.0.4",
    "@semantic-release/release-notes-generator": "11.0.3",
    "@types/node": "20.3.2",
    "commitizen": "4.3.0",
    "cspell": "6.31.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.43.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "pinst": "3.0.0",
    "pkg-ok": "3.0.0",
    "prettier": "2.8.8",
    "semantic-release": "21.0.5",
    "shx": "0.3.4",
    "standard-version": "9.5.0",
    "tsup": "7.1.0",
    "typescript": "5.1.5",
    "vitest": "0.32.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=16"
  },
  "volta": {
    "node": "18.16.0",
    "npm": "9.6.7"
  }
}
